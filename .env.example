# Environment variables for Docker deployment
# Copy this file to .env and modify the values

# Authentication credentials
ATTENDANCE_USERNAME=admin
ATTENDANCE_PASSWORD=password

# Database settings
DATABASE=/app/data/attendance.db

# Application settings
FLASK_ENV=production
TIMEZONE=Europe/Prague
SECRET_KEY=production-secret-key-change-this-to-something-random
PORT=5000
HOST=0.0.0.0

# Docker port mapping (host machine port)
HOST_PORT=5000

# Debug mode (set to false for production)
DEBUG=false

TELEGRAM_BOT_TOKEN=""  # Add your Telegram bot token here
TELEGRAM_CHAT_ID=""  # Add your Telegram chat ID here